<% if @product.questions.answered.visible.present? %>
  <div class="row">
    <h6 class="product-section-title"><%= Spree.t(:questions_and_answers) %></h6>
    <% @product.questions.answered.visible.each_with_index do |question, index| %>
      <div class="qna">
        <div class="question"><%= "#{index+1}. #{question.content}" %></div>
        <div class="answer"><%= question.answer.content %></div>
      </div>
    <% end %>
  </div>
<% end %>
<% if (SpreeProductsQa.require_login && spree_current_user.present?) || !SpreeProductsQa.require_login %>
  <div class="row">
    <h6 class="product-section-title"><%= Spree.t(:do_you_have_any_questions) %></h6>
    <div class='question_form'>
      <%= render 'question_form' %>
    </div>
  </div>
<% end %>
