<%= form_for @product.questions.new, method: :post do |f| %>
  <%= f.hidden_field :product_id, value: @product.id %>
  <p class="form-group">
      <%= f.label :content, Spree.t(:new_question) %><span class="required">*</span><br />
      <%= f.text_area :content, class: 'form-control required', rows: "4", cols: "40" %>
  </p>
  <%= f.button Spree.t(:ask_question), class: 'btn btn-info' %>
<% end %>
